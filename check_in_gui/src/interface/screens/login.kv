#:kivy 2.0.0
<LoginScreen>
    Login:


<Login>
    GridLayout:
        height: root.height
        width: root.width
        cols:1
        rows:4
        Label:
            text:'Please log in'
            font_size: 20
            center_x: root.width/2
            top: root.top-50
        BoxLayout:
            GridLayout:
                cols:1
                rows:2
                TextInput:
                    id: "userinput"
                    text: root.username_input
                    multiline: False
                    focus: True
                TextInput:
                    id: "password_input"
                    text: root.password_input
                    password: True
                    multiline: False
            Button:
                id: "submit_login_button"
                text: "Submit"
                on_press: root.login(root.username_input, root.password_input)