#:kivy 2.0.0
<LoginScreen>
    Login:


<Login>
    GridLayout:
        height: root.height
        width: root.width
        cols:1
        rows:4
        Label:
            text: root.banner
            font_size: 20
            center_x: root.width/2
            top: root.top-50
        BoxLayout:
            GridLayout:
                cols:1
                rows:2
                TextInput:
                    id: "userinput"
                    multiline: False
                    focus: True
                    on_text: root.on_usr_change(self)
                    hint_text: 'Your username'
                TextInput:
                    id: "password_input"
                    password: True
                    multiline: False
                    hint_text: 'Your password'
                    on_text: root.on_pwd_change(self)
            Button:
                id: "submit_login_button"
                text: "Submit"
                on_press: root.login()
            
