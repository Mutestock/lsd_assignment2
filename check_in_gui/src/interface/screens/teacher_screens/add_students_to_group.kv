#:kivy 2.0.0
<AddStudentsToGroupScreen>
    AddStudentsToGroup:

<AddStudentsToGroup>
    GridLayout:
        height: root.height
        width: root.width
        row_force_default: True
        row_default_height: root.height/4
        cols:1
        rows:4
        BoxLayout:
            Button:
                text:"Back"
                on_press:root.back()
        AddStudentGrid:
        
<AddStudentGrid>:
    cols: 3
    rows: 3
    row_force_default: True
    row_default_height: root.height/2
    Button:
        text: "sync"
        on_press: root.sync(self)
        size_hint_y: None
        height: root.height/2

<AddStudentButton>
    text: "Add"
    on_press: root.add_student()    
