#:kivy 2.0.0
<CreateGroupScreen>
    CreateGroup:

<CreateGroup>
    GridLayout:
        height: root.height
        width: root.width
        cols:1
        rows:4
        Label:
            text:"Create Group"
            font_size:30
            center_x:root.width/2
            top: root.top-50
        BoxLayout:
            Button:
                text:"Submit"
                on_press:root.submit_group_name()
            Button:
                text:"back"
                on_press:root.to_dashboard()
        BoxLayout:
            GridLayout:
                cols:1
                rows:2
                TextInput:
                    multiline: False
                    focus: True
                    on_text: root.on_group_name_change(self)
                    hint_text: "Insert group name"
                