#:kivy 2.0.0
<GroupOverviewScreen>
    GroupOverview:

<GroupOverview>
    GridLayout:
        height: root.height
        width: root.width
        row_force_default: True
        row_default_height: root.height/4
        cols:1
        rows:4
        BoxLayout:
            Button:
                text:"Back"
                on_press:root.to_dashboard()
            Button:
                text:"Create Group"
                on_press:root.to_create_group()
        GroupPanel:



<GroupPanel>:
    cols: 3
    rows: 3
    row_force_default: True
    row_default_height: root.height/2

    Button:
        text: "sync"
        on_press: root.sync(self)
        size_hint_y: None
        height: root.height/2

<SelectGroup>
    text: "Select"
    on_press: root.select_group()    

<DeleteGroup>
    text: "Delete"
    on_press: root.delete_group()

