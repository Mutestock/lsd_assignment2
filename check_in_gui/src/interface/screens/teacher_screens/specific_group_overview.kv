#:kivy 2.0.0
<SpecificGroupOverviewScreen>
    SpecificGroupOverview:

<SpecificGroupOverview>
    GridLayout:
        height: root.height
        width: root.width
        cols:1
        rows:3
        BoxLayout:
            GridLayout:
                cols:2
                rows:4
                Button:
                    text:"Attach students to group"
                    on_press:root.to_attach_student_to_group()
                Button:
                    text:"Back"
                    on_press:root.back()
                Button:
                    text:"Sync"
                    on_press:root.sync()
                Button:
                    text:"Generate Check In"
                    on_press:root.to_generate_check_in()
                Button:
                    text:"Delete group"
                    on_press:root.delete_group()
                Button:
                    text:"Manage existing code"
                    on_press:root.to_manage_existing_code()
        StudentGrid:
<StudentGrid>
    cols: 3
    rows: 3
    Button:
        text:"sync"
        on_press: root.sync(self)

<SubGrid>:
    cols: 1
    rows: 3
    Label:
        text: root.usr

<DetachButton>
    text:"Detach"
    on_press: root.detach_student_from_group()
    usr: root.usr



